<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="100dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingBottom="24dp"
    android:background="@color/soft_gray"
    tools:context=".ReverseStringActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐẢO NGƯỢC TỪ VÀ IN HOA"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/professional_blue"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập chuỗi ký tự:"
        android:textColor="@color/dark_text"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_input_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ví dụ: i love you"
        android:inputType="textCapSentences"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_reverse_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐẢO CHUỖI"
        android:backgroundTint="@color/professional_blue"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KẾT QUẢ:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/dark_text"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_reversed_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[Kết quả sẽ hiển thị tại đây]"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/dark_text"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btn_back_from_reverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUAY VỀ MENU"
        android:backgroundTint="@color/light_text"/>

</LinearLayout>